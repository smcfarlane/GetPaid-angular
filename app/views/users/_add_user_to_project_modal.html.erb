
<!-- Modal Structure -->
<div id="addUserToProject" class="modal">
  <%= form_tag(select_projects_for_user_path(@user)) do -%>
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Select the projects this user can manage</h4>
      </div>

        <div class="row">
          <%- @all_projects.each_with_index do |project, i| -%>
            <%- '</div><div class="row">III'.html_safe if (i + 1) % 3 == 0 -%>
            <div class="input-field col s4">
              <div class="checkbox">
                <input type="checkbox" id="project<%= project.id -%>" name="projects[]" value="<%= project.id -%>">
                <label for="project<%= project.id -%>"><%= project.name -%> <br/> <%= project.identifier -%></label>
              </div>
            </div>
          <%- end -%>
        </div>

    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-primary">Ok</button>
    </div>
  <%- end -%>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $('.modal-trigger').leanModal();
  });
</script>
