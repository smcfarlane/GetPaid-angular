<%= form_for @user do |f| -%>
<div class="container">
  <div class="row">
    <div class="col s6">
      <div class="card">

        <div class="card-content">
          <span class="card-title">Name</span>
          <div class="row">
            <input type="hidden" name="user[account_id]" value="<%= current_account.id -%>"/>
            <div class="input-field">
              <%= f.label :first_name -%>
              <%= f.text_field :first_name -%>
            </div>
            <div class="input-field">
              <%= f.label :last_name -%>
              <%= f.text_field :last_name -%>
            </div>
          </div>
        </div>

      </div>
      <div class="card">

        <div class="card-content">
          <span class="card-title">Contact</span>
          <div class="row">
            <%= f.fields_for :phones do |f_p| -%>
              <div class="input-field">
                <%= f_p.label :phone_number -%>
                <%= f_p.hidden_field :id -%>
                <%= f_p.text_field :phone_number -%>
              </div>
            <%- end -%>
            <%= f.fields_for :emails do |f_e| -%>
              <div class="input-field">
                <label for="">Alternate Email</label>
                <%= f_e.hidden_field :id -%>
                <%= f_e.text_field :email -%>
              </div>
            <%- end -%>
          </div>
        </div>
      </div>

    </div>

    <%= f.fields_for :addresses do |f_a| -%>
      <%= f_a.hidden_field :id -%>
      <div class="col s6">
        <div class="card">
          <div class="card-content">
            <span class="card-title">Address</span>
            <div class="row">
              <div class="input-field">
                <label for="">Street Address</label>
                <%= f_a.text_field :street_address -%>
              </div>
              <div class="input-field">
                <label for="">Street Address 2</label>
                <%= f_a.text_field :street_address2 -%>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s5">
                <%= f_a.label :city -%>
                <%= f_a.text_field :city -%>
              </div>
              <div class="input-field col s2">
                <%= f_a.label :state -%>
                <%= f_a.text_field :state -%>
              </div>
              <div class="input-field col s5">
                <%= f_a.label :zip -%>
                <%= f_a.text_field :zip -%>
              </div>
            </div>
          </div>

        </div>
      </div>
    <%- end -%>
    <div class="col s6">
      <input type="submit" value="Ok" class="btn btn-primary"/>
    </div>
  </div>
</div>
<%- end -%>