<%= form_for @user do |f| -%>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <fieldset class="panel panel-default">
        <div class="panel-heading">
          <h3>Name</h3>
        </div>
        <div class="panel-body">
          <input type="hidden" name="user[account_id]" value="<%= current_account.id -%>"/>
          <div class="form-group">
            <%= f.label :first_name -%>
            <%= f.text_field :first_name, class: 'form-control' -%>
          </div>
          <div class="form-group">
            <%= f.label :last_name -%>
            <%= f.text_field :last_name, class: 'form-control' -%>
          </div>
        </div>
      </fieldset>

      <fieldset class="panel panel-default">
        <div class="panel-heading">
          <h3>Contact</h3>
        </div>
        <div class="panel-body">
          <%= f.fields_for :phones do |f_p| -%>
            <div class="form-group">
              <%= f_p.label :phone_number -%>
              <%= f_p.text_field :phone_number, class: 'form-control' -%>
            </div>
          <%- end -%>
          <%= f.fields_for :emails do |f_e| -%>
            <div class="form-group">
              <label for="">Alternate Email</label>
              <%= f_e.text_field :email, class: 'form-control' -%>
            </div>
          <%- end -%>
        </div>
      </fieldset>
    </div>

    <%= f.fields_for :addresses do |f_a| -%>
      <div class="col-md-6">
        <fieldset class="panel panel-default">
          <div class="panel-heading">
            <h3>Address</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label for="">Street Address</label>
              <%= f_a.text_field :street_address, class: 'form-control' -%>
            </div>
            <div class="form-group">
              <label for="">Street Address 2</label>
              <%= f_a.text_field :street_address2, class: 'form-control' -%>
            </div>
            <div class="form-group">
              <%= f_a.label :city -%>
              <%= f_a.text_field :city, class: 'form-control' -%>
            </div>
            <div class="form-group">
              <%= f_a.label :state -%>
              <%= f_a.text_field :state, class: 'form-control' -%>
            </div>
            <div class="form-group">
              <%= f_a.label :zip -%>
              <%= f_a.text_field :zip, class: 'form-control' -%>
            </div>
          </div>
        </fieldset>
      </div>
    <%- end -%>
    <div class="col-md-6">
      <input type="submit" value="Ok" class="btn btn-primary"/>
    </div>
  </div>
</div>
<%- end -%>