<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @organization.name -%></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead>
        <tr>
          <th><h2>Clients</h2></th>
          <th><%= link_to 'New Client', organization_new_client_path, class: 'btn btn-success pull-right' -%></th>
        </tr>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @organization.clients.each do |organization| %>
          <tr>
            <td><%= organization.name -%></td>
            <td>
              <div class="btn-group pull-right">
                <%= link_to 'Show', organization, class: 'btn btn-default' %>
                <%= link_to 'Edit', edit_organization_path(organization), class: 'btn btn-warning' %>
                <%= link_to 'Remove', destroy_client_org_path(organization), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table">
        <thead>
        <tr>
          <th><h2>Vendors</h2></th>
          <th><%= link_to 'New Vendor', organization_new_vendor_path, class: 'btn btn-success pull-right' -%></th>
        </tr>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @organization.vendors.each do |organization| %>
          <tr>
            <td><%= organization.name -%></td>
            <td>
              <div class="btn-group pull-right">
                <%= link_to 'Show', organization, class: 'btn btn-default' %>
                <%= link_to 'Edit', edit_organization_path(organization), class: 'btn btn-warning' %>
                <%= link_to 'Remove', destroy_vendor_org_path(organization), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
