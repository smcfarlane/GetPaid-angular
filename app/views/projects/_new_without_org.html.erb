<div class="row">
  <div class="form-group col-md-6">
    <h3>Client</h3>
    <%- @organization.clients.each do |client| -%>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="org[clients][]" value="<%= client.id -%>">
          <%= client.name -%>
        </label>
      </div>
    <%- end -%>
  </div>
  <div class="form-group col-md-6">
    <h3>Vendors</h3>
    <%- @organization.vendors.each do |vendor| -%>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="org[vendors][]" value="<%= vendor.id -%>">
          <%= vendor.name -%>
        </label>
      </div>
    <%- end -%>
  </div>
</div>
